<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
  <p align="center">
  <%= link_to "Upload Decks", new_resume_path, class: "btn btn-primary" %>
  </p>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Class</th>
      <th>Subject</th>
      <th></th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @resumes.each do |resume| %>
      <tr>
        <td><%= resume.name %></td>
        <td>Under Development</td>
        <td><%= resume.subject %></td>
        <td><%= link_to "Download Deck", resume.attachment_url %></td>
       <!-- <td><%= button_to "Delete",  resume, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{resume.name}?" %></td>-->
        <td>
          <% if can? :destroy, resume %>
            <%= button_to "Delete", resume, method: :delete, class: "btn btn-danger", confirm: "Are you sure you wish to delete #{resume.name}?" %>
          <% end %>
        </td>
     </tr>
    <% end %>
  </tbody>
</table>
