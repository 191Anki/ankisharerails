.page-header{ :style => 'margin-bottom: 70px;' }
  .pull-right
    = link_to 'Home', root_path, :style => 'display: inline-block; margin-top: 25px;'
  %h1.chardin_box{ :'data-position' => 'right', :'data-intro' => 'Click anywhere to remove the overlay.' }
    Ankishare
  %p
    = link_to "Upload Decks", new_deck_path, class: "btn btn-primary"  
 
.well
  = form_for @filterrific do |f|
    .row
      .col-md-3
        .form-group
          %label Class Name
          = f.text_field :with_class_name_id,
                         :class => 'filterrific-periodically-observed form-control'
      .col-md-3
        .form-group
          %label Topic
          = f.text_field :with_topic_id,
                         :class => 'filterrific-periodically-observed form-control'

      .col-md-3
        .form-group
          %label Student Year
          = f.text_field :with_year_id,
                         :class => 'filterrific-periodically-observed form-control'

      .col-md-3
        .form-group
          %label Professor
          = f.text_field :with_professor_id,
                         :class => 'filterrific-periodically-observed form-control'

      .col-md-2
        .form-group
          %label Upload Date
          = f.text_field :with_created_at_gte,
                         :class => 'filterrific-periodically-observed form-control'
      .col-md-4
        .form-group
          %label Sorted by
          = f.select :sorted_by,
                     Deck.options_for_sorted_by,
                     {},
                     { :class => 'form-control' }

#results
  = render :partial => 'decks/list',
           :locals => { :decks => @decks }

:javascript
  $('.js-datepicker').datepicker();
  $('#overlayTrigger').click(function(event) {
    event.preventDefault();
    $('body').chardinJs('start');
  });
